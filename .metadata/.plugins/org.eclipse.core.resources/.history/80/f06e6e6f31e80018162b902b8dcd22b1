package ss.week1;

public class DollarsAndCentsCounter {
	
	private int dollars;
	private int cents;
	

	public DollarsAndCentsCounter (int dollarValue) {
		setDollars(dollarValue);
	}

	public int getDollars() {
		return dollars;
	}

	public void setDollars(int dollars) {
		if (dollars >= 0) {
			this.dollars = dollars;
		}
		else {
			this.dollars = 0;
		}
	}

	public int getCents() {
		return cents;
	}

	public void setCents(int cents) {
		if (0 <= cents && cents <= 99) {
			this.cents = cents;
		}
		else {
			this.cents = 0;
		}
	}
	

}
